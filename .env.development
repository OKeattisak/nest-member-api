# Development Environment Configuration
NODE_ENV=development
PORT=3000
GLOBAL_PREFIX=api

# Database Configuration
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/member-db?schema=public"
DB_MAX_CONNECTIONS=5
DB_CONNECTION_TIMEOUT=20000
DB_IDLE_TIMEOUT=30000
DB_MAX_LIFETIME=1800000
DB_LOG_QUERIES=true
DB_LOG_SLOW_QUERIES=true
DB_SLOW_QUERY_THRESHOLD=500
DB_RETRY_ATTEMPTS=3
DB_RETRY_DELAY=3000

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-for-members-at-least-32-characters-long-dev"
ADMIN_JWT_SECRET="your-super-secret-admin-jwt-key-at-least-32-characters-long-dev"
JWT_EXPIRES_IN="24h"
ADMIN_JWT_EXPIRES_IN="8h"

# Security Configuration
BCRYPT_ROUNDS=10
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900000
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=false

# CORS Configuration
CORS_ENABLED=true
CORS_ORIGINS="http://localhost:3000,http://localhost:3001,http://localhost:4200"

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=1000
AUTH_RATE_LIMIT_TTL=300
AUTH_RATE_LIMIT_LIMIT=10

# Security Headers
SECURITY_HEADERS_ENABLED=true
CSP_ENABLED=false
HSTS_ENABLED=false
HSTS_MAX_AGE=31536000

# Request Configuration
REQUEST_TIMEOUT=30000
BODY_LIMIT=10mb
URL_LIMIT=1mb

# Logging Configuration
LOG_LEVEL=debug
ENABLE_CONSOLE_LOGGING=true
ENABLE_FILE_LOGGING=true
ENABLE_DB_LOGGING=true
ENABLE_PERFORMANCE_LOGGING=true
SLOW_QUERY_THRESHOLD=500
SLOW_REQUEST_THRESHOLD=1000
LOG_DIRECTORY=./logs
LOG_MAX_FILES=7d
LOG_MAX_SIZE=10m
ENABLE_REQUEST_LOGGING=true
ENABLE_RESPONSE_LOGGING=true
ENABLE_ERROR_STACK_TRACE=true

# Business Logic Configuration
POINT_EXPIRATION_DAYS=365
MAX_POINTS_PER_TRANSACTION=10000
MIN_POINTS_PER_TRANSACTION=1
PRIVILEGE_EXPIRATION_DAYS=30
MAX_PRIVILEGES_PER_MEMBER=10
POINT_EXPIRATION_JOB_CRON="0 0 * * *"
ENABLE_POINT_EXPIRATION=true
ENABLE_PRIVILEGE_EXPIRATION=true
DEFAULT_POINT_EXPIRATION_DAYS=365
MAX_MEMBER_REGISTRATIONS_PER_DAY=1000
ENABLE_MEMBER_REGISTRATION=true

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_DATABASE_ENABLED=true
HEALTH_CHECK_MEMORY_HEAP_THRESHOLD=150
HEALTH_CHECK_MEMORY_RSS_THRESHOLD=150