# Production Environment Configuration
NODE_ENV=production
PORT=3000
GLOBAL_PREFIX=api

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/member_service_prod?schema=public"
DB_MAX_CONNECTIONS=20
DB_CONNECTION_TIMEOUT=20000
DB_IDLE_TIMEOUT=30000
DB_MAX_LIFETIME=1800000
DB_LOG_QUERIES=false
DB_LOG_SLOW_QUERIES=true
DB_SLOW_QUERY_THRESHOLD=1000
DB_RETRY_ATTEMPTS=5
DB_RETRY_DELAY=5000

# JWT Configuration (Use strong secrets in production)
JWT_SECRET="CHANGE-ME-TO-A-STRONG-SECRET-AT-LEAST-32-CHARACTERS-LONG-FOR-PRODUCTION"
ADMIN_JWT_SECRET="CHANGE-ME-TO-A-STRONG-ADMIN-SECRET-AT-LEAST-32-CHARACTERS-LONG-FOR-PRODUCTION"
JWT_EXPIRES_IN="24h"
ADMIN_JWT_EXPIRES_IN="8h"

# Security Configuration
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=3
LOCKOUT_DURATION=1800000
PASSWORD_MIN_LENGTH=12
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=true

# CORS Configuration
CORS_ENABLED=true
CORS_ORIGINS="https://yourdomain.com,https://admin.yourdomain.com"

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# Request Configuration
REQUEST_TIMEOUT=30000
BODY_LIMIT=5mb
URL_LIMIT=500kb

# Logging Configuration
LOG_LEVEL=info
ENABLE_CONSOLE_LOGGING=false
ENABLE_FILE_LOGGING=true
ENABLE_DB_LOGGING=false
ENABLE_PERFORMANCE_LOGGING=true
SLOW_QUERY_THRESHOLD=1000
SLOW_REQUEST_THRESHOLD=2000
LOG_DIRECTORY=/var/log/member-service
LOG_MAX_FILES=30d
LOG_MAX_SIZE=50m
ENABLE_REQUEST_LOGGING=false
ENABLE_RESPONSE_LOGGING=false
ENABLE_ERROR_STACK_TRACE=false

# Business Logic Configuration
POINT_EXPIRATION_DAYS=365
MAX_POINTS_PER_TRANSACTION=10000
MIN_POINTS_PER_TRANSACTION=1
PRIVILEGE_EXPIRATION_DAYS=30
MAX_PRIVILEGES_PER_MEMBER=10
POINT_EXPIRATION_JOB_CRON="0 0 * * *"
ENABLE_POINT_EXPIRATION=true
ENABLE_PRIVILEGE_EXPIRATION=true
DEFAULT_POINT_EXPIRATION_DAYS=365
MAX_MEMBER_REGISTRATIONS_PER_DAY=100
ENABLE_MEMBER_REGISTRATION=true

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_DATABASE_ENABLED=true
HEALTH_CHECK_MEMORY_HEAP_THRESHOLD=200
HEALTH_CHECK_MEMORY_RSS_THRESHOLD=200# Security Headers
SECURITY_HEADERS_ENABLED=true
CSP_ENABLED=true
HSTS_ENABLED=true
HSTS_MAX_AGE=31536000

# Production Security Settings (Strict)
ENABLE_STRICT_IP_VALIDATION=true
ENABLE_STRICT_MALICIOUS_PATTERN_DETECTION=true
ENABLE_STRICT_USER_AGENT_VALIDATION=true