# Test Environment Configuration
NODE_ENV=test
PORT=3001
GLOBAL_PREFIX=api

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/member_service_test?schema=public"
DB_MAX_CONNECTIONS=3
DB_CONNECTION_TIMEOUT=10000
DB_IDLE_TIMEOUT=15000
DB_MAX_LIFETIME=900000
DB_LOG_QUERIES=false
DB_LOG_SLOW_QUERIES=false
DB_SLOW_QUERY_THRESHOLD=2000
DB_RETRY_ATTEMPTS=1
DB_RETRY_DELAY=1000

# JWT Configuration
JWT_SECRET="test-jwt-secret-key-for-members-at-least-32-characters-long"
ADMIN_JWT_SECRET="test-admin-jwt-secret-key-at-least-32-characters-long"
JWT_EXPIRES_IN="1h"
ADMIN_JWT_EXPIRES_IN="1h"

# Security Configuration
BCRYPT_ROUNDS=4
MAX_LOGIN_ATTEMPTS=10
LOCKOUT_DURATION=60000
PASSWORD_MIN_LENGTH=6
PASSWORD_REQUIRE_UPPERCASE=false
PASSWORD_REQUIRE_LOWERCASE=false
PASSWORD_REQUIRE_NUMBERS=false
PASSWORD_REQUIRE_SYMBOLS=false

# CORS Configuration
CORS_ENABLED=true
CORS_ORIGINS="http://localhost:3001"

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=10000

# Request Configuration
REQUEST_TIMEOUT=10000
BODY_LIMIT=1mb
URL_LIMIT=100kb

# Logging Configuration
LOG_LEVEL=error
ENABLE_CONSOLE_LOGGING=false
ENABLE_FILE_LOGGING=false
ENABLE_DB_LOGGING=false
ENABLE_PERFORMANCE_LOGGING=false
SLOW_QUERY_THRESHOLD=5000
SLOW_REQUEST_THRESHOLD=5000
LOG_DIRECTORY=./test-logs
LOG_MAX_FILES=1d
LOG_MAX_SIZE=1m
ENABLE_REQUEST_LOGGING=false
ENABLE_RESPONSE_LOGGING=false
ENABLE_ERROR_STACK_TRACE=true

# Business Logic Configuration
POINT_EXPIRATION_DAYS=1
MAX_POINTS_PER_TRANSACTION=1000
MIN_POINTS_PER_TRANSACTION=1
PRIVILEGE_EXPIRATION_DAYS=1
MAX_PRIVILEGES_PER_MEMBER=5
POINT_EXPIRATION_JOB_CRON="*/5 * * * * *"
ENABLE_POINT_EXPIRATION=true
ENABLE_PRIVILEGE_EXPIRATION=true
DEFAULT_POINT_EXPIRATION_DAYS=1
MAX_MEMBER_REGISTRATIONS_PER_DAY=10000
ENABLE_MEMBER_REGISTRATION=true

# Health Check Configuration
HEALTH_CHECK_ENABLED=false
HEALTH_CHECK_DATABASE_ENABLED=false
HEALTH_CHECK_MEMORY_HEAP_THRESHOLD=100
HEALTH_CHECK_MEMORY_RSS_THRESHOLD=100