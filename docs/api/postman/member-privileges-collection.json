{
  "info": {
    "name": "Member Privileges API",
    "description": "Collection for testing Member Privileges API endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{member_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "member_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "privilege_id",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Member Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.success && response.data.accessToken) {",
                  "        pm.collectionVariables.set('member_token', response.data.accessToken);",
                  "        console.log('Member token saved to collection variable');",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"emailOrUsername\": \"member@example.com\",\n  \"password\": \"MemberPassword123!\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/member/auth/login",
              "host": ["{{base_url}}"],
              "path": ["member", "auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "Browse Privileges",
      "item": [
        {
          "name": "Get Available Privileges",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.success && response.data.length > 0) {",
                  "        pm.collectionVariables.set('privilege_id', response.data[0].id);",
                  "        console.log('First privilege ID saved:', response.data[0].id);",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/member/privileges/available",
              "host": ["{{base_url}}"],
              "path": ["member", "privileges", "available"]
            },
            "description": "Get all available privileges for exchange"
          },
          "response": [
            {
              "name": "Success Response",
              "originalRequest": {
                "method": "GET",
                "header": [],
                "url": {
                  "raw": "{{base_url}}/member/privileges/available",
                  "host": ["{{base_url}}"],
                  "path": ["member", "privileges", "available"]
                }
              },
              "status": "OK",
              "code": 200,
              "_postman_previewlanguage": "json",
              "header": [
                {
                  "key": "Content-Type",
                  "value": "application/json"
                }
              ],
              "cookie": [],
              "body": "{\n  \"success\": true,\n  \"data\": [\n    {\n      \"id\": \"clpr123456789\",\n      \"name\": \"Premium Access\",\n      \"description\": \"Access to premium features and exclusive content\",\n      \"pointCost\": 500,\n      \"validityDays\": 30,\n      \"isActive\": true\n    },\n    {\n      \"id\": \"clpr987654321\",\n      \"name\": \"VIP Status\",\n      \"description\": \"Permanent VIP status with lifetime benefits\",\n      \"pointCost\": 2000,\n      \"validityDays\": null,\n      \"isActive\": true\n    }\n  ],\n  \"message\": \"Available privileges retrieved successfully\",\n  \"meta\": {\n    \"timestamp\": \"2023-12-01T13:00:00.000Z\",\n    \"traceId\": \"trace-avail123\"\n  }\n}"
            }
          ]
        }
      ]
    },
